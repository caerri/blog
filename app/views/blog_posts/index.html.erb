<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-5xl font-bold text-gray-900 mb-12">My Blog</h1>

  <% @blog_posts.each do |blog_post| %>
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= link_to blog_post.title, blog_post, class: "hover:text-blue-600 transition" %></h2>
      <div class="text-gray-700 leading-relaxed"><%= blog_post.body %></div>
    </div>
  <% end %>
</div>